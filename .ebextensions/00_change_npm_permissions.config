files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/00_set_tmp_permissions.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      chown -R nodejs:nodejs /tmp
      chown -R nodejs:nodejs /tmp/deployment
      chown -R nodejs:nodejs /tmp/deployment/application
      chown -R nodejs:nodejs /tmp/deployment/application/node_modules
      chown -R nodejs:nodejs /tmp/deployment/application/node_modules/node-sass
      chown -R nodejs:nodejs /tmp/deployment/application/node_modules/node-sass/build
